<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sA"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="15dp"
    tools:context=".DrawPanelFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp">

            <ImageButton
                android:id="@+id/settingsBtn"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_size"
                android:layout_weight="1"
                android:background="?android:selectableItemBackgroundBorderless"
                android:contentDescription="Setting"
                android:scaleType="fitCenter"
                android:src="@drawable/settings_logo" />

            <ImageButton
                android:id="@+id/colorBtn"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_size"
                android:layout_weight="1"
                android:background="?android:selectableItemBackgroundBorderless"
                android:contentDescription="Color"
                android:scaleType="fitCenter"
                android:src="@drawable/color_wheel" />

            <ImageButton
                android:id="@+id/penBtn"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_size"
                android:layout_weight="1"
                android:background="?android:selectableItemBackgroundBorderless"
                android:contentDescription="Pen"
                android:scaleType="fitCenter"
                android:src="@drawable/pencil_logo" />

            <ImageButton
                android:id="@+id/eraserBtn"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_size"
                android:layout_weight="1"
                android:background="?android:selectableItemBackgroundBorderless"
                android:contentDescription="Eraser"
                android:scaleType="fitCenter"
                android:src="@drawable/eraser" />

            <ImageButton
                android:id="@+id/shapeBtn"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_size"
                android:layout_weight="1"
                android:background="?android:selectableItemBackgroundBorderless"
                android:contentDescription="Shape"
                android:scaleType="fitCenter"
                android:src="@drawable/shape_logo" />

        </LinearLayout>

        <SeekBar
            android:id="@+id/sizeSeekBar"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:max="20"
            android:progress="5" />

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="#000000" />

    </LinearLayout>

    <com.example.dragon_descendants.DrawingView
        android:id="@+id/drawView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>